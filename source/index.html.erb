---
pageable: true
per_page: 10
---
<% if paginate %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <h1><%= link_to article.title, article %></h1>
  <p class="article-meta">
    <%= article.date.strftime("%b %e, %Y") %>
    <% if (page_tags = article.tags) && page_tags.count > 0 %>
      / <%= page_tags.map { |page_tag| link_to page_tag, tag_path(page_tag) }.join(', ') %>
    <% end %>
  </p>
  <%= link_to article.summary, article, class: "article-summary" %>
  <hr/>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
